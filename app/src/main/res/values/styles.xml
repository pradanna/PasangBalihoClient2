<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splasScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#fff</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/frontdrop</item>
        <item name="strokeColor">@color/frontdrop</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">0dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomCirclePageIndicatorBesar">
        <item name="fillColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">5dp</item>
        <item name="pageColor">@color/backdrop</item>
        <item name="centered">false</item>
    </style>

    <style name="IconOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/textColorDark</item>
        <item name="iconTint">@color/textColorDark</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@color/textColorDark</item>
    </style>

    <style name="IconOnlyButtonFull" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="GenosTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
